<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list >
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape>
                    <solid android:color="#aadcdedf"/>
                    <stroke
                        android:width="0.5dp"
                        android:color="#B4B4B4"/>
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list >
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke
                        android:width="0.5dp"
                        android:color="#B4B4B4"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>